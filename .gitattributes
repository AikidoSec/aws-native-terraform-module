# Set default behavior to automatically normalize line endings
* text=auto

# Terraform files
*.tf text eol=lf
*.tfvars text eol=lf
*.hcl text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# JSON
*.json text eol=lf

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf

# Archives
*.zip binary
*.tar binary
*.tar.gz binary
*.tgz binary
*.jar binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Other
*.pdf binary
